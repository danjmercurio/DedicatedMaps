  <script type="text/javascript">
    var layer_config = <%= @layer_config.to_json.to_s.html_safe %>;
    var mapState = <%= @mapState.to_json.html_safe %>;
  </script>
  <div class="menu-wrap">
    <nav class="menu">
      <% if @layers.empty? %>
        <div class="link-list">
          <ul><li><a href="#"><span>You have no layers enabled.</span></a></li></ul>
        </div>
      <% else %>
        <div class="link-list">
          <ul>
          <% @layers.each do |layer| %>
            <li><span class="floatLeft"><%= layer.title %></span>
              <%= check_box_tag layer.name, 1, false, data: {:layer => layer.name, :id => layer.id} %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="icon-list">
        <a href="#"><i class="fa fa-fw fa-home"></i></a>
        <a href="#"><i class="fa fa-fw fa-question-circle"></i></a>
        <a href="#"><i class="fa fa-fw fa-power-off"></i></a>
      </div>
    </nav>
  </div>
  <button class="menu-button" id="open-button"><i class="fa fa-fw fa-cog"></i><span>Open Menu</span></button>
  <div class="content-wrap">
    <div class="content">
      <div id="map_div"></div>
    </div>
  </div>
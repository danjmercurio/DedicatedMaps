<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="Dedicated Maps Mapping Platform">
    <meta name="author" content="Dan Mercurio">
    <title>Dedicated Maps - Map</title>

    <%= stylesheet_link_tag "map" %> <!-- app/assets/stylesheets/map.css -->

    <!-- jQuery 1.12.0 from MaxCDN. Not the same jQuery as the public layout. -->
    <script src='https://code.jquery.com/jquery-1.12.0.min.js' type="text/javascript"></script>
    <!-- Google Maps JS API unstable -->
    <script id="googleMaps" async defer src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= @api_key %>"></script>

    <%= javascript_include_tag 'application' %> <!-- app/assets/javascripts/application.js -->
    <%= javascript_include_tag 'infobubble' %> <!-- vendor/assets/javascripts/infobubble.js -->
    <%= javascript_include_tag 'dedicatedmaps' %> <!-- app/assets/javascripts/dedicatedmaps.js -->

    <%= csrf_meta_tag %>
  </head>
  <body>
  <div class="container">

    <div class="row">
      <div class="header">
        <div class="logo"><span class="client"><%= @map.user.client.company_name %></span></div>
        <div class="adminMenu">
          <% if @admin_viewing %>
              <%= link_to_function 'Save Current View', 'save_map();',
                                   {:title => 'This will save the current map location and setting for the next viewer.'} %>
              <%= 'Map owner: ' + @map.user.first_name + ' ' + @map.user.last_name %>
          <% end %>
        </div>
        <div class="account"><%= render :partial => "layouts/account_bar" %></div>
      </div>
    </div>

    <div class="row">
      <%= yield %>
      <noscript>
        <div id="no-script">
          <div class="no-script-message">
            <div>You are either using a very old browser, or you have <strong>JavaScript</strong> disabled.</div>
            <a class="no-script-help-link" href="//support.google.com/maps/?hl=en&amp;authuser=0&amp;p=no_javascript" target="_blank">Enable
              JavaScript to use Dedicated Maps</a>
          </div>
        </div>
      </noscript>
    </div>
    <div class="row">
      <div id="footer">&#169;<%= Time.now.year %> Dedicated Maps, Inc. All rights reserved.</div>
    </div>
    </div>
  </body>
</html>
